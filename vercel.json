{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://smc-tech-backend.onrender.com/api/$1"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "buildCommand": "npm run build:client",
  "outputDirectory": "dist/spa",
  "framework": "vite"
}
